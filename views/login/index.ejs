<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/background.css">
  <link rel="stylesheet" href="/css/login.css">
  <title>Login / Sign Up</title>
</head>
<body>
  <div class="form-container">
    <div class="toggle-buttons">
      <button id="login-btn" class="active">Login</button>
      <button id="signup-btn">Sign Up</button>
    </div>

    <!-- Login Form -->
    <form id="login-form" class="form active" action="/login/loginAccount" method="post">
      <h1>Login</h1>
      <input type="email" id="login-email" name="email_addr" placeholder="Email" required />
      <input type="password" id="login-password" name="password" placeholder="Password" required />
      <button type="submit">Login</button>
      <button type="button" id="github">Login with GitHub</button>
    </form>

    <!-- Sign Up Form -->
    <form id="signup-form" class="form" action="/login/createAccount" method="post">
      <h1>Sign Up</h1>
      <input type="text" id="signup-username" name="user_name" placeholder="Username" required />
      <input type="email" id="signup-email" name="email_addr" placeholder="Email" required />
      <input type="password" id="signup-password" name="password" placeholder="Password" required />
      <button type="submit">Sign Up</button>
    </form>
  </div>
    <!--Scripts-->
    <script type="module">
      import { createBackground } from '/javascript/background.js';
      createBackground({
        sphereCount: 3,
        particleCount: 80
      });
    </script>
    <script src="/javascript/login.js"></script>
  </body>
</html>
