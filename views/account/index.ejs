<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/style.css">
  <title>Account Settings</title>
</head>
<body>
  <div class="settings-container">
    <button class="back-button" onclick="window.history.back()">‚Üê Back</button>
    
    <h1>Account Settings</h1>

    <div class="settings-section">
      <h2 id="userN">Welcome, <%= username %></h2>
      <h2>Profile Information</h2>
      
      <div class="setting-item">
        <label id="username"></label>
        <div id="username-message"></div>
      </div>

      <div class="setting-item">
        <label for="email">Email</label>
        <input type="email" id="email" placeholder="Enter your email">
        <button onclick="updateEmail()">Update Email</button>
        <div id="email-message"></div>
      </div>
    </div>

    <div class="settings-section">
      <h2>Security</h2>
      
      <div class="setting-item">
        <label for="current-password">Current Password</label>
        <input type="password" id="current-password" placeholder="Enter current password">
      </div>

      <div class="setting-item">
        <label for="new-password">New Password</label>
        <input type="password" id="new-password" placeholder="Enter new password">
      </div>

      <div class="setting-item">
        <label for="confirm-password">Confirm New Password</label>
        <input type="password" id="confirm-password" placeholder="Confirm new password">
        <button onclick="updatePassword()">Change Password</button>
        <div id="password-message"></div>
      </div>
    </div>

    <div class="settings-section">
      <h2>Account Actions</h2>
      
      <div class="setting-item">
        <form action="/account/logout" method="POST" style="margin: 0;">
          <button type="submit">Logout</button>
        </form>
      </div>
      <!--<p class="info-text">Warning: This action cannot be undone. All your data will be permanently deleted.</p>-->
      <div class="setting-item">
        <form action="/account/delete" method="POST" style="margin: 0;">
          <button class="danger" onclick="deleteAccount()" >Delete Account</button>
        </form>
      </div>
    </div>
  </div>
    <!--Scripts-->
    <script type="module">
      import { generateBackground } from '/javascript/components/controller.js';
      
      generateBackground();
    </script>
</body>
</html>
